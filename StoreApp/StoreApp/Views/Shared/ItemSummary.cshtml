@model Item

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">

            <div class="mx-auto" style="width: 200px;">

                <div class="card" style="width: 18rem;">
                    <img src="@Model.ImgUrl" class="card-img-top" alt="shoe selection">
                    <div class="card-body">
                        <h5 class="card-title">@Model.ItemType</h5>
                        <p class="card-text">@Model.Description</p>
                        <p class="card-text">@Model.Price</p>
                        <a asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-ItemId="@Model.Id" class="btn btn-primary">Add to cart</a>
                    </div>
                </div>
            </div>
        </div>

        @*@Model.*@
    </div>
</div>
